class Solution {
public:
    int largestPerimeter(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        int n = nums.size();
        int sum = 0;
        bool value = false;
        for (int a = 0; a <= n - 3; a++) {
            int b = a + 1;
            int c = b + 1;
            if (nums[a] + nums[b] > nums[c] ) {
                sum = nums[a] + nums[b] + nums[c];
               
            }
            else {
                value = true;
            }
            if(value == true && sum == 0 && c == n-1){
                return 0;
            }
        }
        return sum;
    }
};
